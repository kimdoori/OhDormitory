<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/sleep_w_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017.02.05"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        />
    <TextView
        android:id="@+id/sleep_d_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017.02.05"
        />
    <Spinner
        android:id="@+id/sleep_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/sleepOut"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/frontNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/frontNumber"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"/>
        <EditText
            android:id="@+id/midNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:hint="0000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"/>
        <EditText
            android:id="@+id/rearNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:hint="0000"/>
    </LinearLayout>
    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"/>
</LinearLayout>